---
interface Props {
  date: Date;
  thisMonth: boolean;
}

const { date, thisMonth } = Astro.props;
var days = ["Domingo", "Lunes", "Martes", "Miercoles", "Jueves", "Viernes", "Sabado"];

---

<article class:list={['card', thisMonth ? 'enable' : 'disabled']}>
    <header>
        <h1>{days[date.getDay()]}</h1>
    </header>
    <div>
        <p>
            Enchiladas de mole con pollo y arroz
        </p>
        <p>
            Enchiladas de mole con pollo y arroz
        </p>
    </div>
</article>

<style is:inline>
    .card{
        background-color: white;
        border-radius: 10px; 
        border: 3px solid #431bd2;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        cursor: pointer;

        header{
            padding: 0.5rem;
            text-align: center;
            background-color: #431bd2;
            border-top-right-radius: 5px;
            border-top-left-radius: 5px;
        }
        h1{
            font-size: 1.5rem;
            margin: 0;
            color: white;
        }

        div{
            display: flex;
            flex-direction: column;
            gap: 1rem;
            justify-content: center;
            align-items: center;
            height: fit-content;
            min-height: max-content;
            padding: 1rem;

            p{
                margin: 0;
                font-size: 1.2rem;
                background-color: #7a63d0;
                color: white;
                padding: 0.5rem 1rem;
                border-radius: 2rem;
                text-align: center;
            }
        }
    }

    .card.enable:hover{
        -webkit-box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75);
        box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75);
        transform: scale(1.03);

        transition: all 0.3s;
    }

    .card.disabled{
        background-color: #9c9c9c;
        cursor: not-allowed;
        border: 3px solid #3b2686;

        header{
            background-color: #3b2686;
        }

        p{
            background-color: #63578f;
        }      
    }

</style>